        },
        {
            "label": "üêõ build (Debug)",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "\"${workspaceFolder}/src/Aemulus XR Reporting.sln\"",
                "-c",
                "Debug"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "label": "üßπ clean",
